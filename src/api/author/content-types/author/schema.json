{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": "Create authors for your content"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": { "type": "string", "required": false },

    "bio":   { "type": "text" },
    "role":  { "type": "string" },

    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "files", "videos"]
    },

    "email": { "type": "string" },

    "twitter":   { "type": "string" },
    "x":         { "type": "string" },
    "instagram": { "type": "string" },
    "linkedin":  { "type": "string" },
    "facebook":  { "type": "string" },
    "website":   { "type": "string" },

    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "author"
    }
  }
}
